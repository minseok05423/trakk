{
  "name": "ski-tracker-backend",
  "version": "1.0.0",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "worker": "ts-node-dev --respawn --transpile-only src/workers/processing.worker.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "worker:start": "node dist/workers/processing.worker.js",
    "migrate": "prisma migrate dev",
    "migrate:prod": "prisma migrate deploy",
    "generate": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.8.0",
    "@aws-sdk/client-s3": "^3.481.0",
    "@aws-sdk/client-ecs": "^3.481.0",
    "@aws-sdk/s3-request-presigner": "^3.481.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bull": "^4.12.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bull": "^4.10.0",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.0",
    "ts-node-dev": "^2.0.0",
    "prisma": "^5.8.0"
  }
}
